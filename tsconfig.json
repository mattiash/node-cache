{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2016",
        "lib": ["es2016"],
        "types": ["node"],
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "inlineSourceMap": true,
        "declaration": true,
        "removeComments": false,
        "outDir": "build/"
    },
    "include": ["*.ts", "test/*.ts", "lib/*.ts"]
}
